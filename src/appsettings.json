{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Polly": "Warning"
    },
    "Console": {
      "LogLevel": {
        "System.Net.Http.HttpClient": "Warning",
        "Polly": "Warning"
      },
      "FormatterName": "Simple",
      "FormatterOptions": {
        "TimestampFormat": "[MM/dd/yy h:mm:ss tt] ",
        //"SingleLine": true,
        "IncludeScopes": true
      }
    }
  },
  "AllowedHosts": "*",
  "ResponseCacheDurationSeconds": 5,
  "TeslaGateway": {
    "Enabled": false,
    "Host": "<ip_or_dns>",
    "Email": "",
    "Password": "",
    "Username": "customer",
    "LoginCacheMinutes": 10
  },
  "Enphase": {
    "Enabled": false,
    "Host": "<ip_or_dns>"
  }
}
